<?php

/**
 * @file
 * Install, update, and uninstall functions for the ac_cpm module.
 */

/**
 * Implements hook_install().
 */
function ac_cpm_install() {
  // Making this module the last.
    db_update('system')
    ->fields(array('weight' => 999))
    ->condition('type', 'module')
    ->condition('name', 'ac_cpm')
    ->execute();
}
